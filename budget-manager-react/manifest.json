{
    "manifest_version": 3,
    "name": "Budget Manager using CRXJS React",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    }
}